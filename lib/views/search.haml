- require_js 'search'
- img_src = "https://maps.googleapis.com/maps/api/staticmap?scale=2&size=400x200&amp;maptype=roadmap"
- markers = "size:mid%7C#{@points.map {|p|[p.lat,p.lng].join(',')}.join('%7C')}"
- markers += "&markers=icon:http://i.stack.imgur.com/orZ4x.png%7C#{@location.lat},#{@location.lng}"
- gmaps_api_key = "AIzaSyBxaCRguM2pvw9HOLybx5ZP6Cuo94KnJwg"
- map_url = "#{img_src}&markers=#{markers}&key=#{gmaps_api_key}"

%div.container
  %h1 Food safety problems near me
  %div.row
    %div.col-md-12
      %p.map
        %img{:src => map_url}/

  %div.row.results
    - @points.each do |point|
      %div.col-md-12.result
        %div.pull-right
          = "%.1f" % point.distance_from(@location) + "km away"
        %h4
          %a{:href => link_to("/business/#{point.id}")}
            = point.name
          %small= "#{point.problems.size} problems"
        %p.text-muted
          %small= point.address

  %div.row.report
    %div.col-md-12
      %p
        Have a complaint about a business?
      %p
        %a{:href => "/report"}
          %button.btn.btn-warning.report{:type => "submit"}
            %i.fa.fa-fw.fa-bug
            Report a food safety problem
  %div.row.nav
    .col-md-12
      %p
        %a{:href => "/"}
          %button.btn.btn-default{:type => "button"}
            %i.fa.fa-fw.fa-arrow-circle-o-left
            Back
