- require_js 'index'

%div.container
  %div.page-header
    %h1 Got Gastro
  %div.row.landing
    %div.col-md-12
      %p
        Got Gastro helps you find out about potential food safety problems when eating out or buying food.
    %div.col-md-12
      %p
        %button.btn.btn-success.geolocation{:type => "submit"}
          %i.fa.fa-fw.fa-location-arrow
          Find food safety problems near me
    %div.col-md-12
      %p
        %input#autocomplete.form-control{:placeholder => "Search for food safety problems near...", :type => "text", :onFocus => "geolocate()"}/
    %div.col-md-12
      %p
        %a{:href => "/report"}
          %button.btn.btn-warning.report{:type => "submit"}
            %i.fa.fa-fw.fa-bug
            Report a food safety problem

  %footer
    %p.text-center
      %small
        %a{:href => link_to('/privacy')} Privacy policy

